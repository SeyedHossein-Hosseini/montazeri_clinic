<%- include ('./layouts/head.ejs') %>
    <link rel="stylesheet" href="css/validationPages.css">

    <body>
        <section class="loginPage">
            <div class="container-fluid loginLayout">
                <div class="row h-100">
                    <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12" id="loginForm">
                        <div class="d-flex flex-column" id="formElements">
                            <div class="loginHeader pt-2">
                                <h3 class="text-center" style="color:#727A80; font-weight: bold;">صفحه ی فراموشی رمز عبور 
                                </h3>
                                <div class="helpUser">
                                    <ul class="text-info">
                                        <li>به جای کلمه ی عبور شماره تماسی که در کلینیک ثبت شده است را وارد کنید</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="loginFormInputs flex-fill">
                                <form class="forgetPasswordForm d-flex flex-column pt-3 mx-auto" style="width:75%; min-width:300px;">
                                    <label for="docNum"> * شماره پرونده:  </label>
                                    <input type="text" name="docNum" id="docNum" value="" autofocus required>
                                    <span id="docNumError" class="mt-2 text-center text-danger">
                                        
                                    </span>
                                    <label for="Tel" class="mt-3"> * کلمه عبور: </label>
                                    <input type="text" name="Tel" id="Tel" required>
                                    <!-- <img src="img/invisible.png" id="PassVisibilityImg" width="24px"
                                    style="margin-top:-26px ;" alt="Tel visibility"> -->
                                    <span id="TelError" class="mt-2 text-center text-danger">
                                        
                                    </span>
                                    <div class="d-block w-100 text-center">
                                        <input type="submit"
                                            class="forgetPassSubmit px-lg-5 px-xl-5 px-md-2 py-1 mt-xl-5 mt-lg-4"
                                            value="احراز هویت" />

                                        <p id="formErr" class="mt-2 text-center text-danger">
                                        </p>
                                    </div>
                                    
                                    <div class="text-center text-danger errorMsg">
                                        <p>   </p>    
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <%- include('./layouts/clinicInformation.ejs') %>
                </div>
            </div>
        </section>
    </body>

    <!-- <script src="js/secondPasswordVisibility.js"></script> -->
    <script src="js/forgetPasswordCredentials.js"></script>
    <script>
        document.getElementById("docNum").addEventListener('input', (e) => {
            console.log(e.target.value);
              e.target.value = e.target.value
                .replace(/[^0-9.]/g, "")
                .replace(/(\..*?)\..*/g, "$1")
                .replace(/^0[^.]/, "0");
        })
    </script>

    </html>